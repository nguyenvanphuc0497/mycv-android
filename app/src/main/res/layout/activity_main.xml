<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:text="ABCD Pay"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <vanphuc0497.job.mycv.ui.widget.CustomZXingScannerView
        android:id="@+id/cameraQrScanner2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:borderColor="@color/colorWhite"
        app:borderLength="50dp"
        app:borderWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:maskColor="@color/colorBlackOpacity50"
        app:paddingBottomFinder="70dp"
        app:paddingHorizontalFinder="60dp"
        app:paddingTopFinder="70dp"
        tools:background="@color/colorBlackOpacity50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="お店にあるQRコードを読み取ってください"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@id/cameraQrScanner2"
        app:layout_constraintStart_toStartOf="@id/cameraQrScanner2"
        app:layout_constraintTop_toTopOf="@id/cameraQrScanner2" />

    <ImageView
        android:id="@+id/imgViewQRCode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="お店にあるQRコードを\n読み取ってください"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/cameraQrScanner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvResultQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="98dp"
        android:gravity="center"
        android:text="Quét đi bé"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraQrScanner2" />

</androidx.constraintlayout.widget.ConstraintLayout>
